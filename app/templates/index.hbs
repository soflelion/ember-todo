<div class="row">
  <div class="col-xs-12">
   
  </div>
</div>

<div class="row d-flex justify-content-center container mx-auto">
    <div class="col-md-12">
      <div class="mb-3 card">
        <div class="card-header-tab card-header">
          <div>
           <form class="form-inline row">
      <div class="form-group col-5">
        {{input type='text' placeholder='Ajouter une tache' value=todo class='form-control'}}
      </div>
      <div class="col-7">
      <button {{action 'addTodo'}} class="custom-btn btn-3" {{bind-attr disabled=state}}>Ajouter</button>
      <button {{action 'reloadModel'}} class="custom-btn btn-3 btn-info">Actualiser</button>
      </div>
    </form>
    </div>
        </div>
        <div class="scroll-area-sm">
          <perfect-scrollbar class="ps-show-limits">
            <div style="position: static;" class="ps ps--active-y">
              <div class="ps-content">
                <ul class=" list-group list-group-flush">
                  {{#each todos as |todo| }}
                         <li class="list-group-item">
                    <div class="widget-content p-0">
                      <div class="widget-content-wrapper">
                        <div class="widget-content-left mr-2">
                          <div class="custom-checkbox custom-control"><input class="custom-control-input" id="exampleCustomCheckbox10"
                              type="checkbox"><label class="custom-control-label" for="exampleCustomCheckbox10">&nbsp;</label></div>
                        </div>
                        <div class="widget-content-left flex2">
                          <div class="widget-heading">{{todo.task}}</div>
                        </div>
                  
                        <div class="widget-content-right">
                         
                          <button {{action 'removeTodo'}} class="border-0 btn-transition btn btn-outline-danger">
                            <i class="fa fa-trash"></i>
                  
                          </button>
                        </div>
                      </div>
                    </div>
                  </li>
                  {{/each}}
                </ul>
              </div>
              
            </div>
          </perfect-scrollbar>
        </div>
        <div class="card-header">
                 <div class="card-header-title font-size-lg text-capitalize font-weight-normal"><i
              class="fa fa-tasks"></i>&nbsp;Todo List</div>
        </div>
      </div>
    </div>
    </div>